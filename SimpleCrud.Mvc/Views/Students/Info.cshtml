@model Student
<div class="d-flex flex-column justify-content-center">
    <div class="align-self-center">
        <h1>Info @Model.FirstName @Model.LastName</h1>
    </div>
    <div class="align-self-center">
        @Html.DisplayForModel()
    </div>
    <div class="d-flex flex-row justify-content-between" id="backButtonsContainer">
        @Html.ActionLink("Back", "Index", "Students", null, new { @class = "btn btn-primary" })
    </div>
</div>